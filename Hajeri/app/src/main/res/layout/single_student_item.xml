<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_profile_single_student_item"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_student_name_single_student_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Student name"
                app:layout_constraintStart_toEndOf="@+id/iv_profile_single_student_item"
                app:layout_constraintTop_toTopOf="@+id/iv_profile_single_student_item" />

            <TextView
                android:id="@+id/tv_gr_no_single_student_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="#0"
                app:layout_constraintStart_toEndOf="@+id/iv_profile_single_student_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_student_name_single_student_item" />

            <TextView
                android:id="@+id/tv_gender_single_student_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Gender"
                app:layout_constraintStart_toEndOf="@+id/tv_gr_no_single_student_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_student_name_single_student_item" />

            <TextView
                android:id="@+id/tv_category_single_student_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Category"
                app:layout_constraintStart_toEndOf="@+id/tv_gender_single_student_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_student_name_single_student_item" />

            <Button
                android:id="@+id/bt_profile_single_student_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Profile"
                app:layout_constraintBottom_toBottomOf="@+id/iv_profile_single_student_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_gender_single_student_item"
                app:layout_constraintVertical_bias="0.4"
                tools:layout_editor_absoluteX="144dp" />

            <ImageButton
                android:id="@+id/ibt_call_single_student_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_profile_single_student_item"
                app:layout_constraintStart_toEndOf="@+id/bt_profile_single_student_item"
                app:layout_constraintTop_toBottomOf="@+id/tv_category_single_student_item"
                app:srcCompat="@android:drawable/ic_menu_call" />

            <ImageButton
                android:id="@+id/ibt_options_single_student_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ibt_call_single_student_item"
                app:layout_constraintStart_toEndOf="@+id/ibt_call_single_student_item"
                app:layout_constraintTop_toTopOf="@+id/ibt_call_single_student_item"
                app:srcCompat="@mipmap/ic_options_btn" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>